{
  "name": "gsr",
  "private": true,
  "repository": "https://github.com/typicalninja/google-sr",
  "scripts": {
    "build": "turbo run build --no-daemon",
    "dev": "turbo run dev --parallel --no-daemon",
    "test": "turbo run test --no-daemon --filter=google-sr --filter=google-sr-selectors",
    "build:packages": "turbo run build --filter=google-sr-selectors --filter=google-sr --filter=google-that --no-daemon",
    "build:website": "turbo run build --filter=website --no-daemon",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --write",
    "ci:publish": "pnpm publish -r --no-git-checks",
    "ci:version": "changeset version",
    "prepare": "is-ci || lefthook install"
  },
  "author": "typicalninja",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=15.0.0",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.6.0",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "is-ci": "3.0.1",
    "lefthook": "^1.7.11",
    "turbo": "^1.10.12"
  }
}
