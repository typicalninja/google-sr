{
  "name": "gsr",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/typicalninja/google-sr",
  "scripts": {
    "build": "turbo run build --no-daemon",
    "dev": "turbo run dev --parallel --no-daemon",
    "test": "turbo run test --no-daemon --filter=google-sr --filter=google-sr-selectors",
    "build:website": "turbo run build --no-daemon --filter=google-sr-selectors --filter=google-sr --filter=website",
    "prepare": "lefthook install"
  },
  "author": "typicalninja",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=15.0.0",
    "pnpm": ">=7"
  },
  "packageManager": "pnpm@8.6.12",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "lefthook": "^1.7.11",
    "tsup": "^7.2.0",
    "turbo": "^1.10.12"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "search-insight"
      ]
    }
  }
}
