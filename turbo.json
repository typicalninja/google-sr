{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**"]
        },
        "test": {
            "dependsOn": ["build"],
            "inputs": ["src/**/*.ts", "test/**/*.ts"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}